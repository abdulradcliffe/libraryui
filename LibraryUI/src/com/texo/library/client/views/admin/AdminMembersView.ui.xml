<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:m='urn:import:gwt.material.design.client.ui'
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
	.root {
		position: absolute;
		width: 1100px;
		height: 100%;
		padding: 10px;
	}
	
	.cellTable {
		border-bottom: 1px solid #ccc;
		text-align: left;
		margin-bottom: 4px;
	}
	
	.membersLabel {
		font-size: large;
	}
	
	.membersTableDiv {
		position: absolute;
		top: 60px;
		width: 100%;
		height: 100%;
	}
	
	.addUserButton {
		position: absolute;
		right: 35px;
		top: 15px;
		background-color: #54a7ff;
		padding-bottom: 3px;
		padding-top: 3px;
		padding-left: 10px;
		padding-right: 10px;
		color: white;
		font-size: medium;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel styleName="{style.root}">
			<g:Label styleName="{style.membersLabel}">Members</g:Label>
			<g:Button ui:field="addUserButton" text="Add New User"
				styleName="{style.addUserButton}"></g:Button>
			<g:HTMLPanel styleName="{style.membersTableDiv}">
				<g:HTMLPanel ui:field="membersTable"></g:HTMLPanel>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>