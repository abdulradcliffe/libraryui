<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:m='urn:import:gwt.material.design.client.ui'>
	<ui:style>
	.welcomeLabel {
		font-size: large;
		color: white;
		position: absolute;
		left: 25px;
		top: 10px;
	}
	
	.root {
		width: 100%;
		position: absolute;
		background-color: #464646;
		padding: 0px;
		height: 50px;
	}
	
	.logoutButton {
		position: absolute;
		right: 20px;
		top: 10px;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel styleName="{style.root}">
			<g:Label styleName="{style.welcomeLabel}">Welcome Administrator</g:Label>
			<g:Button styleName="{style.logoutButton}" text="Logout" ui:field="logoutButton">
			</g:Button>
		</g:HTMLPanel>

	</g:HTMLPanel>
</ui:UiBinder>